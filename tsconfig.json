{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./build/",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}
